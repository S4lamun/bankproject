<Page x:Class="bankproject_GUI.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bankproject_GUI"
      mc:Ignorable="d"
      Title="MainPage" Height="438" Width="749">
    <Grid Background="White" Margin="10,0,0,10">



        <TextBlock x:Name="BankNameBox"  HorizontalAlignment="Left"  Height="37" Margin="314,0,0,346" TextWrapping="Wrap" Text="BankName" VerticalAlignment="Bottom" Width="197" FontSize="24" FontWeight="Bold"/>

        <Button Content="Login" FontWeight="Bold" Height="30" 
             HorizontalAlignment="Center" VerticalAlignment="Top" 
             Width="206" Background="#FF8AAAE5" Margin="0,150,0,0" 
             Click="LoginButton_Click" />
        <Button Content="About us" FontWeight="Bold" Height="30" 
        HorizontalAlignment="Center" VerticalAlignment="Top" 
        Width="206" Background="#FF8AAAE5" Margin="0,196,0,0" 
        Click="AboutUsButton_Click">

            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF8AAAE5"/>

                    <Setter Property="Foreground" Value="Black"/>

                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Width" Value="206"/>
                    <Setter Property="Height" Value="30"/>

                    <Style.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF5C6C92"/>

                            <Setter Property="Cursor" Value="Hand"/>

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button Content="Exit" FontWeight="Bold" Height="30" 
             HorizontalAlignment="Center" VerticalAlignment="Top" 
             Width="142" Background="#FF8AAAE5" Margin="0,241,0,0" 
             Click="ExitButton_Click" />
        <Button Content="Pytas" FontWeight="Bold" Height="30" 
     HorizontalAlignment="Left" VerticalAlignment="Top" 
     Width="142" Background="#FF8AAAE5" Margin="370,336,0,0" 
     Click="Pytas_click" />
        <Image HorizontalAlignment="Left" Height="64" Margin="261,29,0,0" VerticalAlignment="Top" Width="53" Source="/8176383.png"/>
    </Grid>
</Page>
