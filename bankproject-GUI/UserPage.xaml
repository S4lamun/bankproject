<Page x:Class="bankproject_GUI.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bankproject_GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid Background="White">

        <Frame x:Name="UserFrame" NavigationUIVisibility="Hidden"></Frame>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="35" Margin="567,30,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="200" IsReadOnly="True"/>
        <TextBox x:Name="BalanceBox" HorizontalAlignment="Left" Height="35" Margin="567,70,0,0" TextWrapping="Wrap" Text="BalanceBox" VerticalAlignment="Top" Width="203" IsReadOnly="True"/>
        <Button x:Name="WithdrawButton" Content="Withdraw" HorizontalAlignment="Left" Height="50" Margin="47,148,0,0" VerticalAlignment="Top" Width="100" Click="WithdrawButton_Click"/>
        <Button x:Name="DonateButton" Content="Donate" HorizontalAlignment="Left" Height="50" Margin="47,225,0,0" VerticalAlignment="Top" Width="100" Click="DonateButton_Click"/>
        <Button x:Name="TransferButton" Content="Transfer" HorizontalAlignment="Left" Height="50" Margin="47,320,0,0" VerticalAlignment="Top" Width="100" Click="TransferButton_Click"/>
        <Button x:Name="LogoutButton" Content="Logout and save" HorizontalAlignment="Left" Height="60" Margin="628,345,0,0" VerticalAlignment="Top" Width="115" Click="LogoutButton_Click"/>



    </Grid>
</Page>
