<Window x:Class="bankproject_GUI.ChangeBankNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bankproject_GUI"
        mc:Ignorable="d"
        Title="ChangeBankNameWindow" Height="229" Width="515">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="54" Margin="30,22,0,0" TextWrapping="Wrap" FontWeight="Bold"  Text="Set new bank name:" VerticalAlignment="Top" Width="379" FontSize="21"/>
        <TextBox x:Name="SetNewBankName" TextWrapping="Wrap" Text=" " Margin="30,81,114,87"/>
        <Button x:Name="SaveButton" Content="SAVE" HorizontalAlignment="Center" Height="30"
        Margin="0,163,0,0" VerticalAlignment="Top" Width="108"
        Click="SaveButton_Click" Background="#FF8AAAE5" FontWeight="Bold">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF8AAAE5"/>

                    <Setter Property="Foreground" Value="Black"/>

                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Width" Value="206"/>
                    <Setter Property="Height" Value="30"/>

                    <Style.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF5C6C92"/>

                            <Setter Property="Cursor" Value="Hand"/>

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

        </Button>
    </Grid>
</Window>
