<Page x:Class="bankproject_GUI.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bankproject_GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox x:Name="AccountList" HorizontalAlignment="Left" Height="172" Margin="154,224,0,0" VerticalAlignment="Top" Width="472" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="LogoutButton" FontWeight="Bold"  Background="#FF8AAAE5" Content="Logout and save" HorizontalAlignment="Left" Height="53" Margin="683,343,0,0" VerticalAlignment="Top" Width="107" Click="LogoutButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#FF8AAAE5"/>

                    <Setter Property="Foreground" Value="Black"/>

                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Width" Value="206"/>
                    <Setter Property="Height" Value="30"/>

                    <Style.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF5C6C92"/>

                            <Setter Property="Cursor" Value="Hand"/>

                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

        </Button>
        <Button x:Name="SortButton" FontWeight="Bold"  Background="#FF8AAAE5" Content="Sort" HorizontalAlignment="Left" Height="53" Margin="48,343,0,0" VerticalAlignment="Top" Width="78" Click="SortButton_Click"/>

        <Button x:Name="AddAccoutButton"  FontWeight="Bold"  Background="#FF8AAAE5" Content="Add account" Height="46" Margin="48,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="78" RenderTransformOrigin="0.5,0.5" Click ="AddAccountButton_Click"></Button>
        <Button x:Name="RemoveAccountButton" FontWeight="Bold"  Background="#FF8AAAE5"  Content="Remove account" HorizontalAlignment="Left" Height="37" Margin="48,273,0,0" VerticalAlignment="Top" Width="101" Click ="RemoveAccountButton_Click"/>
        <Button x:Name="AddNewEmployeeButton"  FontWeight="Bold"  Background="#FF8AAAE5" Content="Add New Employee" HorizontalAlignment="Left" Height="47" Margin="154,152,0,0" VerticalAlignment="Top" Width="122" Click="AddNewEmployeeButton_Click"/>
        <Button x:Name="RemoveEmployeeButton" FontWeight="Bold"  Background="#FF8AAAE5"  Content="Remove Employee" HorizontalAlignment="Left" Height="47" Margin="335,152,0,0" VerticalAlignment="Top" Width="153" Click="RemoveEmployeeButton_Click"/>
        <Image HorizontalAlignment="Left" Height="87" Margin="24,21,0,0"
            VerticalAlignment="Top" Width="74" Source="/8176383.png"
            RenderTransformOrigin="0.809,0.517"/>
        <TextBox x:Name="BankNameBox"  HorizontalAlignment="Left"  Height="50" Margin="97,0,0,342" TextWrapping="Wrap" Text="BankName" VerticalAlignment="Bottom" Width="236" FontSize="28" FontWeight="Bold"/>

    </Grid>
</Page>
